<div class="page-header">
    <h2><%= content_tag(:span, "", class: "glyphicon glyphicon-user") %> <%= @user.name %></h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th colspan=2>Profile Details</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Name:</th>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <th>Email:</th>
            <td><%= @user.email %></td>
        </tr>
        <tr>
            <th>Token:</th>
            <td><%= @user.token %></td>
        </tr>
        <tr>
            <th>Forms:</th>
            <td>
                <div class="btn-group-vertical" role="group">
                    <%= @user.web_forms.map{ |form| link_to(form.name, form, class: "btn btn-default") }.join().html_safe %>
                    <%= link_to "New Form", new_web_form_path, class: "btn btn-primary" %>
                </div>
            </td>
        </tr>
    </tbody>
</table>
    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-default" %>
        </div>
        <div class="btn-group" role="group">
            <%= link_to "New Form", new_web_form_path(user_id: current_user), class: "btn btn-primary" %>
        </div>
    </div>
 