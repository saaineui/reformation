<div class="page-header">
    <h2><span class="glyphicon glyphicon-tasks"></span> <%= @web_form.name %></h2>
    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <%= link_to(content_tag(:span, "", class: "glyphicon glyphicon-inbox")+" Submissions (#{@web_form.submissions.count})", submissions_path(@web_form), class: "btn btn-info") %>
        </div>
        <div class="btn-group" role="group">
            <%= link_to(content_tag(:span, "", class: "glyphicon glyphicon-console")+" Embed Code", form_embed_path(@web_form), class: "btn btn-default") %>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Field</th>
            <th>Required?</th>
        </tr>
    </thead>
    <tbody>
        <%- @web_form.web_form_fields.each do |field| %>
        <tr>
            <td><%= field.id %></td>
            <td><%= field.name %></td>
            <td><%= field.required? ? "Required" : "No" %></td>
        </tr>
        <%- end %>
    </tbody>
</table>
    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <%= link_to "Edit", edit_web_form_path(@web_form), class: "btn btn-default" %>
        </div>
        <div class="btn-group" role="group">
            <%= link_to "Delete", web_form_path(@web_form), method: :delete, data: { confirm: "Are you sure you want to delete #{@web_form.name}?" }, class: "btn btn-warning" %>
        </div>
    </div>
