<h2>New Form</h2>
<%= form_for(@web_form) do |f| %>
<% if @web_form.errors.any? %>
    <% @web_form.errors.full_messages.each do |msg| %>
        <div class="alert alert-warning"><%= msg %></div>
    <% end %>
<% end %>
    
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="clearfix submit-wrap">
    <%= f.submit "Create Form", class: "btn btn-primary" %>
    </div>
<% end %>